{{>layout/header}}
{{>layout/navigator}}
<div class="col-md-12">
    <div class="col-md-4">
    <div class="form-group">
        {{#posts}}
            <label for="title">게시글 작성일</label>
            <input type="text" class="form-control" id="createdDate" value="{{createdDate}}" readonly>
        </div>
            <div class="form-group">
                <label for="title">게시글 수정일</label>
                <input type="text" class="form-control" id="createdDate" value="{{modifiedDate}}" readonly>
            </div>
            <form>
                <div class="form-group">
                    <label for="title">글 번호</label>
                    <input type="text" class="form-control" id="id" value="{{id}}" readonly>
                </div>
                <div class="form-group">
                    <label for="title">제목</label>
                    <input type="text" class="form-control" id="title" value="{{title}}" readonly>
                </div>
                <div class="form-group">
                    <label for="author"> 작성자 </label>
                    <input type="text" class="form-control" id="author" value="{{writer}}" readonly>
                </div>
                <div class="form-group">
                    <label for="content"> 내용 </label>
                    <textarea class="form-control" id="content" readonly>{{content}}</textarea>
                </div>

            </form>
            <a href="/" role="button" class="btn btn-secondary">취소</a>
            {{#sessionUser}}
                <a href="/posts/update/{{posts.id}}" role="button" class="btn btn-secondary">수정</a>
                <a href="/posts/delete/{{posts.id}}" role="button" class="btn btn-secondary">삭제</a>

                <!--<button type="button" class="btn btn-danger" id="btn-delete">삭제</button> -->
            {{/sessionUser}}
        {{/posts}}
    </div>
    </div>
</div>
<h2>===========================================================================================================</h2>
  {{#sessionUser}}
      <div>
        <form class="answer-write" method="post" action="/posts/{{posts.id}}/questions">
            <div class="form-group" style="padding:14px;">
                <textarea class="form-control" placeholder="Update your status" name="contents"></textarea>
            </div>
            <input type="submit" class="btn btn-success pull-right" value="답변하기"/>
        </form>
    </div>
  {{/sessionUser}}
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>답변등록일</th>
            <th>답변수정일</th>
            <th>아이디</th>
            <th>답변내용</th>
            <th></th>
            <th></th>
        </tr>
        </thead>{{#questions}}
        <tbody id="tbody">

            <tr>
                <td>{{createdDate}}</td>
                <td>{{modifiedDate}}</td>
                <td>{{writer}}</td>
                <td>{{content}}</td>
                <td><a href="/posts/{{post.id}}/questions/{{id}}/update">수정</a></td>
                <td><a href="/posts/{{post.id}}/questions/{{id}}/delete">삭제</a></td>



                <td></td>
            </tr>

        </tbody>{{/questions}}
    </table>
{{>layout/footer}}