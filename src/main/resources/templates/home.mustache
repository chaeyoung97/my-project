{{>layout/header}}
{{>layout/navigator}}
{{#sessionUser}}
<h4>{{userId}} 님 환영합니다.</h4>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
                <a href="/update" class="btn btn-info active" role="button">개인정보수정</a>
            {{/sessionUser}}

        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>게시글등록일</th>
            <th>최종수정일</th>
            <th>댓글수</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/posts/{{id}}">{{title}}</a></td>
                <td>{{writer}}</td>
                <td>{{createdDate}}</td>
                <td>{{modifiedDate}}</td>
                <td></td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}